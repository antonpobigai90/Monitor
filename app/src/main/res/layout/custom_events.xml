<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        app:cardBackgroundColor="@color/colorGrey2"
        app:cardCornerRadius="5sp">

        <RelativeLayout
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:background="@color/colorGrey2">


            <ImageView
                android:id="@+id/ivMonitorStatus"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:background="@color/colorText" />

            <TextView
                android:id="@+id/txtVwTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivMonitorStatus"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:text="09:00" />

            <View
                android:id="@+id/ivSeprator"
                android:layout_width="30sp"
                android:layout_height="1sp"
                android:layout_below="@id/txtVwTime"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:background="#ccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivSeprator"
                android:layout_marginLeft="10sp"
                android:text="09:00" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>